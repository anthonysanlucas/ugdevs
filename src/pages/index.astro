---
import Base from '@/layouts/Base.astro'
import Hero from '@/components/home/Hero.astro'
import ContributorsImages from '@/components/ContributorsImages.astro'
import AudetecBanner from '@/components/home/AudetecBanner.astro'
import ToolCards from '@/components/home/ToolCards.astro'
---

<Base
  currentUrl=""
  titlePage="UG Devs | Herramientas de Estudiantes de la Universidad de Guayaquil"
  descriptionPage="Más de 10.000 estudiantes se han beneficiado de estas herramientas, simulador de calificaciones, reseñas de profesores, emprendimientos y más en la Universidad de Guayaquil.">
  <Hero />
  <ContributorsImages isCentered={true} />
  <ToolCards />
  <AudetecBanner />
</Base>

<script>
  const intersectionParams = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  }

  const handleFadeUpIntersection = (entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-fade-up')
        entry.target.classList.add('opacity-100')
        observer.unobserve(entry.target)
      }
    })
  }

  const fadeUpElements = document.querySelectorAll('.fade-up')
  const observerFadeUp = new IntersectionObserver(handleFadeUpIntersection, intersectionParams)

  fadeUpElements.forEach(element => {
    observerFadeUp.observe(element)
  })
</script>
